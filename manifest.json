{
  "manifest_version": 3,
  "name": "RTL Text Fixer",
  "version": "2.0.0",
  "description": "Automatically applies proper RTL text direction for Arabic and Persian content on any website",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "RTL Text Fixer"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
